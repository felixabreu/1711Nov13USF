package com.revature.hello;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Scanner;

public class UnderstandingArrays {
	public static void main(String[] args) {
		System.out.println("Enter numbers: ");
		Scanner scan = new Scanner(System.in);
		String nums = scan.nextLine();
		ArrayList<Integer> numInts = new ArrayList<Integer>();
		
		Arrays.stream(nums.split(" "))
			  //.map(n -> numInts.add(Integer.parseInt(n)));
		  	  .forEach(n -> System.out.println(Integer.parseInt(n)));
		
			  //.forEach(n -> System.out.println(n));
		
		for(int i = 0; i < numInts.size(); i++){
			System.out.println(numInts.get(i));
		}
		
		//Arrays.stream(numStrings).map(n -> Integer.parseInt(n));
		
		scan.close();
	}
}
